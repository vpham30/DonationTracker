<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/location_name_text"
        android:text="Location Name"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_name_text"
        android:layout_alignParentStart="true"
        android:id="@+id/name_input"
        android:inputType="text"
        android:text="Name"
        android:ems="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_input"
        android:layout_alignParentStart="true"
        android:id="@+id/location_type_text"
        android:text="Location Type"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_type_text"
        android:layout_alignParentStart="true"
        android:id="@+id/type_spinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_spinner"
        android:layout_alignParentStart="true"
        android:id="@+id/location_longitude_text"
        android:text="Location Longitude"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_longitude_text"
        android:layout_alignParentStart="true"
        android:id="@+id/longitude_input"
        android:inputType="number"
        android:text="Longitude"
        android:ems="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude_input"
        android:layout_alignParentStart="true"
        android:id="@+id/location_latitude_text"
        android:text="Location Latitude"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_latitude_text"
        android:layout_alignParentStart="true"
        android:id="@+id/latitude_input"
        android:inputType="number"
        android:text="Latitude"
        android:ems="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude_input"
        android:layout_alignParentStart="true"
        android:id="@+id/location_address_text"
        android:text="Location Address"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_address_text"
        android:layout_alignParentStart="true"
        android:id="@+id/address_input"
        android:inputType="text"
        android:text="Address"
        android:ems="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_input"
        android:layout_alignParentStart="true"
        android:id="@+id/location_phone_text"
        android:text="Location Phone Number"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_phone_text"
        android:layout_alignParentStart="true"
        android:id="@+id/phone_input"
        android:inputType="number"
        android:text="Phone Number"
        android:ems="10"/>

    <Button
        android:id="@+id/location_edit_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="69dp"
        android:text="Submit"
        android:onClick="onLocationSubmitPressed"/>

    <Button
        android:id="@+id/location_edit_cancel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/location_edit_submit"
        android:layout_marginEnd="68dp"
        android:text="Cancel"
        android:onClick="onLocationCancelPressed"/>
</RelativeLayout>