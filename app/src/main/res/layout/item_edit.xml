<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/item_edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="83dp"
        android:text="Cancel"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="503dp" />

    <Button
        android:id="@+id/item_edit_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_edit_cancel"
        android:layout_marginEnd="83dp"
        android:text="Submit"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="503dp" />

    <ScrollView
        android:id="@+id/item_scroll_view"
        android:layout_width="341dp"
        android:layout_height="465dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/item_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <EditText
                android:id="@+id/item_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Name" />

            <TextView
                android:id="@+id/time_stamp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Stamp" />

            <EditText
                android:id="@+id/time_stamp_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Time Stamp" />

            <TextView
                android:id="@+id/item_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />

            <EditText
                android:id="@+id/item_location_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Location" />

            <TextView
                android:id="@+id/item_short_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short Description" />

            <EditText
                android:id="@+id/item_short_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Short Description" />

            <TextView
                android:id="@+id/item_full_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Description" />

            <EditText
                android:id="@+id/item_full_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Full Description" />

            <TextView
                android:id="@+id/item_value_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Value" />

            <EditText
                android:id="@+id/item_value_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Value" />

            <TextView
                android:id="@+id/item_category_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category" />

            <EditText
                android:id="@+id/item_category_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Item Category" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>