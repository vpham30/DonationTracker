<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Type"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/location_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Longitude"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/location_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Latitude"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Address"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/location_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Location Phone Number"
        android:textAppearance="?attr/textAppearanceListItem" />

    <Button
        android:id="@+id/location_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Location"
        android:onClick="onEditLocationPressed"/>

    <Button
        android:id="@+id/location_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="onBackPressed">

    </Button>
</LinearLayout>